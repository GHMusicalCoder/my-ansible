# bash aliases file
alias update='sudo apt update; apt list --upgradable'
alias upgrade='sudo apt upgrade -y; sudo apt auto-remove -y; sudo snap refresh; update_ytdl; git_pull_all; remove_old_snaps;'
alias install='sudo apt install'
alias snapi='sudo snap install'
alias refresh='sudo snap refresh'
alias search='apt search'
alias upsource='source ~/.bashrc'
alias fonts='sudo fc-cache -fv'
alias link='ln -sf'
alias pushdots='cd ~/Development/mydotfiles; git push origin master; cd; source ~/.bashrc'
alias pushnotes='update_obsidian_notes'
alias pushlyrics='cd ~/Development/lyric-web-app; git push origin master;'
alias pushansible='cd ~/Development/ansible_pull; git push origin master; cd; source ~/.bashrc'
alias gitlab='ln -sf ~/Development/ansible_pull/files/gitlab.config ~/.gitconfig; ln -sf ~/.config/gitcreds/gitlab.creds ~/.git-credentials'
alias github='ln -sf ~/Development/ansible_pull/files/github.config ~/.gitconfig; ln -sf ~/.config/gitcreds/github.creds ~/.git-credentials'
alias makeimage='sudo ddrescue --force -D'
alias down='cd ~/Downloads'
alias docs='cd ~/Documents'
alias dev='cd ~/Development'
alias notes='cd ~/Development/my-notes'
alias dots='cd ~/Development/mydotfiles'
alias pics='cd ~/Pictures'
alias vids='cd ~/Videos'
alias work='cd ~/Work'
alias temp='cd ~/Temp'
alias anpull='cd ~/Development/ansible_pull'
alias pyavail='pyenv install --list'
alias freenas='ssh root@192.168.88.224'
alias showfreenas='showmount -e 192.168.88.224'
alias remove='sudo apt remove'
alias pushmusic='cd ~/Development/music-karaoke-tracker; git push origin master; cd;'
alias pushsudoku='cd ~/Development/sudoku-solver; git push origin master; cd;'
alias venup='sudo sh Ventoy2Disk.sh -u /dev/sda'
alias pullall='git_pull_all'
alias playbook='cd ~/Development/ansible_pull; ansible-playbook ./testing.yml -c local -u christopher -K --become-method=sudo;'
alias ytdl='~/Applications/SAApps/yt-dlp/yt-dlp -S "ext,res:720"'
alias getsong='~/Applications/SAApps/yt-dlp/yt-dlp -i -x -f bestaudio --extract-audio --audio-format mp3 --audio-quality 0'
alias sudoku='cd ~/Development/sudoku-solver; python3 solver.py;'
alias wordle='cd ~/Development/wordle-solver; python3 wordle-solver.py;'
alias ventoy="cd ~/Applications/GitApps/ventoy;"


